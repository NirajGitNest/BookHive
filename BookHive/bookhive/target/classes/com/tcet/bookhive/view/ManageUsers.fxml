<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_CENTER" prefHeight="733.0" prefWidth="643.0" style="-fx-background-color: #ccedfc;" stylesheets="@../../../../styles/books.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tcet.bookhive.controller.ManageUsersController">
   <children>
      <VBox prefHeight="804.0" prefWidth="643.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField id="searchbtn" fx:id="searchfield" prefHeight="46.0" prefWidth="524.0" promptText="Search by name or username" style="-fx-background-color: #ccedfc;">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </TextField>
                  <Button id="ancbtn" alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleSearch" prefHeight="45.0" prefWidth="150.0" text="Search" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" />
                     </graphic>
                  </Button>
                  <Button id="ancbtn" fx:id="btnadduser" alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleadduserclick" prefHeight="45.0" prefWidth="150.0" text="Add User" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="PLUS" />
                     </graphic>
                  </Button>
                  <Button id="ancbtn" fx:id="btnremuser" alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#handleremuserclick" prefHeight="45.0" prefWidth="150.0" text="Remove User" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="MINUS" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="usertable" prefHeight="238.0" prefWidth="643.0" style="-fx-background-color: #ccedfc;">
               <columns>
                  <TableColumn fx:id="idcolumn" prefWidth="75.0" text="User ID" />
                  <TableColumn fx:id="namecolumn" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="usernamecolumn" prefWidth="75.0" text="Username" />
                  <TableColumn fx:id="statuscolumn" prefWidth="75.0" text="Status" />
                  <TableColumn fx:id="datejoincolumn" prefWidth="75.0" text="Date Joined" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</StackPane>

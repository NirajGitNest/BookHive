<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_CENTER" prefHeight="733.0" prefWidth="643.0" stylesheets="@../../../../styles/students.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tcet.bookhive.controller.StudentsController">
   <children>
      <VBox prefHeight="699.0" prefWidth="787.0" spacing="20.0" style="-fx-background-color: #ccedfc;">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField id="searchbtn" fx:id="searchfield" onAction="#handleSearch" prefHeight="46.0" prefWidth="524.0" promptText="Search by name or ID" style="-fx-background-color: #ccedfc;">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </TextField>
                  <Button id="ancbtn" fx:id="stdsearchbtn" mnemonicParsing="false" onAction="#handleSearch" prefHeight="45.0" prefWidth="110.0" text="Search" textFill="WHITE" />
                  <Button id="ancbtn" fx:id="addstdbtn" mnemonicParsing="false" onAction="#handleaddstd" prefHeight="45.0" prefWidth="110.0" text="Add Student" textFill="WHITE" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="studenttable" prefHeight="238.0" prefWidth="643.0" style="-fx-background-color: #ccedfc;">
               <columns>
                  <TableColumn fx:id="idcolumn" prefWidth="75.0" text="Student ID" />
                  <TableColumn fx:id="namecolumn" prefWidth="75.0" text="Student Name" />
                  <TableColumn fx:id="contcolumn" prefWidth="75.0" text="Contact" />
                  <TableColumn fx:id="deptcolumn" prefWidth="75.0" text="Department" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</StackPane>
